<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container mt-5">
        <div class="row">
            <%- include('../partials/alert') %>
            <div class="col-md-12 d-flex justify-content-center mt-3 ">
                <div class="card text-bg-light mb-3" style="width: 22rem;">
                    <div class="card-header text-center bg-danger"><h5 class="text-light">myChef</h5></div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                              <label for="fullname" class="form-label">Fullname:</label>
                              <input type="text" class="form-control" id="fullname" name="fullname">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">E-Mail:</label>
                                <input type="email" class="form-control" id="email" name="email" aria-describedby="alreadyTaken">
                                <% if (typeof message != "undefined" && message.warning=="alreadyTaken") { %>
                                    <div id="alreadyTaken" class="form-text text-danger"><%= message.text %></div>
                                <% } %>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone:</label>
                                <input type="tel" class="form-control" id="phone" name="phone">
                            </div>
                            <div class="mb-3">
                              <label for="password" class="form-label">Password:</label>
                              <input type="password" class="form-control" id="password" name="password">
                            </div>
                            <div class="mb-3">
                                <label for="passwordagain" class="form-label">Password Again:</label>
                                <input type="password" class="form-control" id="passwordagain" name="passwordagain" aria-describedby="noMatches">
                                  <div id="noMatches" class="form-text text-danger" style="display: none;">Password again and password not match</div>

                            </div>
                            <div class="mb-3 float-start">
                                <div class="form-check mb-2 ">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"  id="isAccept" name="isAccept">
                                        <label class="form-check-label" for="isAccept">I read and accept <a href="#">Terms & conditions</a></label>
                                    </div>
                                </div>
                            </div>
                            <div class="buttons text-center">
                                <button type="submit" class="btn btn-danger" id="signUpBtn" disabled>Sign Up</button>
                            </div>
                            <div class="my-3">
                                <p>Alraedy have an account: <a href="/auth/login">Login</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/script') %>
    <script>
        const isAcceptCheckbox = document.getElementById('isAccept');
        const password = document.getElementById('password');
        const passwordAgain = document.getElementById('passwordagain');
        const signUpBtn = document.getElementById('signUpBtn');
        const noMatches = document.getElementById('noMatches');

        passwordAgain.addEventListener("input", () => {
            if (password.value === passwordAgain.value) {
                noMatches.style.display = "none"; // Eşleşme varsa hata mesajını gizle
                isAcceptCheckbox.addEventListener('change', function () {
                    signUpBtn.disabled = !isAcceptCheckbox.checked; // Buton durumunu güncelle
                });
            } else {
                noMatches.style.display = "block"; // Eşleşme yoksa hata mesajını göster
                signUpBtn.disabled = true; // Butonu devre dışı bırak
            }
        });

    </script>
</body>
</html>
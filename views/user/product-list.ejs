<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="container">
        <div class="row my-5">
            <h3 class="text-center pb-3"><%= title %></h3>
            <hr class="text-muted">
            <div class="col-12 my-3">
                <div class="row d-flex justify-content-center">
                    <% products.forEach(product => { %>                     
                        <div class="col-12 mx-3">
                            <div class="card mb-3" style="min-height: 10rem;">
                                <div class="row g-0">
                                  <div class="col-md-4">
                                    <img src="/static/images/<%= product.productImg %>" class="img-fluid rounded-start border" alt="<%= product.productImg %>" style="height: 10rem; width: 100%;">
                                  </div>
                                  <div class="col-md-8">
                                        <div class="card-body">
                                          <h5 class="card-title mb-3 mt-2"><%= product.productName %></h5>
                                          <p class="card-text ps-2 3 mt-3 mb-4"><%- product.productDescription %></p>
                                          <p class="card-text float-end my-2"><small class="text-muted"><%= product.productPrice %>â‚º</small></p>
                                        </div>
                                  </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>